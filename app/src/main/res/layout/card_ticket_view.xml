<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/text_wrap_dimans16_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_money"
                    android:gravity="start"
                    android:text="自驾租车"/>

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/text_wrap_dimans16_style"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="100"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type"
                    style="@style/text_wrap_dimans16_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/av_chose"
                    android:gravity="start"
                    android:text="自驾租车"
                    android:textColor="@color/color_max"
                    android:textSize="@dimen/dimens_15sp"/>


                <dfy.demo.widget.AddView
                    android:id="@+id/av_chose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp">
                </dfy.demo.widget.AddView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>