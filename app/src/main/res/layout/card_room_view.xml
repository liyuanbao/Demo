<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_linear"
        android:orientation="vertical"
        android:showDividers="middle"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_car"
                style="@style/text_wrap_dimans16_style"
                android:text="自驾租车"/>

            <TextView
                android:id="@+id/tv_date"
                style="@style/text_wrap_dimans16_style"
                android:layout_width="match_parent"
                android:gravity="end"
                android:text="9-15到9-18"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/tv_detail"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/tv_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:textColor="@color/color_min"
                    android:text="xxx"
                    android:textSize="@dimen/dimens_18sp"
                    />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:textColor="@color/color_max"
                    android:text="xxx"
                    android:textSize="@dimen/dimens_15sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_tool_bg_red"
                android:textSize="@dimen/dimens_15sp"
                />
            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/text_wrap_dimans16_style"
                    android:layout_height="wrap_content"
                    android:text="自驾租车"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipChildren="false">

                    <TextView
                        android:id="@+id/tv_type"
                        style="@style/text_wrap_dimans16_style"
                        android:layout_height="wrap_content"
                        android:text="自驾租车"
                        android:textColor="@color/color_max"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end|center_vertical">

                        <dfy.demo.widget.AddView
                            android:id="@+id/av_chose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp">
                        </dfy.demo.widget.AddView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_change"
            style="@style/text_wrap_dimans16_style"
            android:layout_width="match_parent"
            android:textColor="@color/color_tool_bg_red"
            android:text="更换酒店"/>
    </LinearLayout>
</android.support.v7.widget.CardView>